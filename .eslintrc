{
  "root": true,
  "env": {
    "node": true
  },
  "extends": ["plugin:vue/vue3-recommended", "prettier"],
  "parserOptions": {
    "parser": "babel-eslint"
  },
  "rules": {
    "no-undef":"error",
    "semi": ["error", "never"],
    "no-extra-semi": ["error"],
    "vue/html-self-closing": [
      "error",
      {
        "html": {
          "void": "always",
          "normal": "never",
          "component": "any"
        }
      }
    ],
    "vue/attribute-hyphenation": [
      0,
      "never"
    ]
  }
}
